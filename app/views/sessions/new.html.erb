<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email, autofocus: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>

  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
<% end %>